                                <li class="gallery-item-likes"><span class="visually-hidden">Likes:</span><i class="fas fa-heart" aria-hidden="true"></i><%= elem.like_count%></li>
                                <li class="gallery-item-comments"><span class="visually-hidden">Comments:</span><i class="fas fa-comment" aria-hidden="true"></i><%= elem.comment_count%></li>
                            </ul>
                        </div>
                    </div>
                <%})%>
            </div>
            <!-- End of gallery -->
        </div>
        <!-- End of container -->
    
    </main>
