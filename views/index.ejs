<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>instagram</title>
    <link rel="icon" href="https://play-lh.googleusercontent.com/h9jWMwqb-h9hjP4THqrJ50eIwPekjv7QPmTpA85gFQ10PjV02CoGAcYLLptqd19Sa1iJ">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/main.css">
    
</head>
<body class="container">
    <nav class="navbar">
        <div class="nav-wrapper">
            <img href="/home" src="img/logo.PNG" class="brand-img" alt="">
            <input type="text" class="search-box" placeholder="search">
            <div class="nav-items">
                <img src="img/home.PNG" class="icon" alt="">
                <img src="img/messenger.PNG" class="icon" alt="">
                <img src="img/add.PNG" class="icon" alt="">
                <img src="img/explore.PNG" class="icon" alt="">
                <img src="img/like.PNG" class="icon" alt="">
                <a href="/profile" class="icon user-profile"><img src="/img/<%= data.data[0].username%>.png" class="icon " alt=""></a>
            </div>
        </div>
    </nav>
    <main>

        <section class="main">
            <div class="wrapper">
                <div class="left-col">
                    <div class="status-wrapper carousel owl-carousel" >
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 1.png" alt=""></div>
                            <p class="username">user_name_1</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 2.png" alt=""></div>
                            <p class="username">user_name_2</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 3.png" alt=""></div>
                            <p class="username">user_name_3</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 3.png" alt=""></div>
                            <p class="username">user_name_3</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 3.png" alt=""></div>
                            <p class="username">user_name_3</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 3.png" alt=""></div>
                            <p class="username">user_name_3</p>
                        </div>
                        <div class="status-card my-item">
                            <div class="profile-pic"><img src="img/cover 3.png" alt=""></div>
                            <p class="username">user_name_3</p>
                        </div>
                </div>
            </div>
        </section>
<section class="main section-content">
    <div class="wrapper">
        <div class="left-col">
            <% data.data[0].feed.data.map((elem) => { %>
                <div class="post">
                    <div class="info">
                        <div class="user">
                            <div class="profile-pic"><img src="/img/<%= data.data[0].username%>.png" alt=""></div>
                            <p class="username"><%= data.data[0].username%></p>
                        </div>
                        <img src="" class="options" alt="">
                    </div>
                    <img src="/img/<%= elem.client_cache_key%>.jpg" class="post-image" alt="">
                    <div class="post-content">
                        <div class="reaction-wrapper">
                            <img src="img/like.PNG" class="icon" alt="">
                            <img src="img/comment.PNG" class="icon" alt="">
                            <img src="img/send.PNG" class="icon" alt="">
                            <img src="img/save.PNG" class="save icon" alt="">
                        </div>
                        <p class="likes"><%= elem.like_count%> like</p>
                        <p class="description"><span>username</span>
                            <%= data.data[0].full_name%>
                        </p>
                        <p class="post-time">2 minutes ago</p>
                    </div>
                    <div class="comment-wrapper">
                        <img src="img/smile.PNG" class="icon" alt="">
                        <input type="text" class="comment-box" placeholder="Add a comment">
                        <button class="comment-btn">post</button>
                    </div>
                </div>
            <%})%>
        </div>
    </div>
</section>
<section class="main user_section">
    <div class="wrapper"> 
        <div class="right-col">
